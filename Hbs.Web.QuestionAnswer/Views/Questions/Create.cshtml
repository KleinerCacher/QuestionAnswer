@model Hbs.Web.QuestionAnswer.Models.Question

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Frage erstellen</h2>
<div>
    @Html.ActionLink("Zurück zur Liste", "Index")
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="question-title-labelbox">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-md-1" })
            </div>
            <div class="col-lg-6">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control question-create-input-title" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-12">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", @row = 6 } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-2">
                <input type="submit" value="Erstellen" class="btn btn-default" />
            </div>
        </div>
    </div>
}
