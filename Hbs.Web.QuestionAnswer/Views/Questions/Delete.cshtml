@model Hbs.Web.QuestionAnswer.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "Löschen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Wollen Sie die Frage wirklich löschen?</h2>
<div>
    @Html.ActionLink("Zurück zur Frage", "Details", "Questions", new { id = Model.Id }, null)
</div>

<h3>Frage</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    @{
        if (Model.Answers.Count() > 0)
        {
            <ul>
                <li>Bereits @Model.Answers.Count() Antworten vorhanden</li>
                @if (Model.IsSolved)
                {
                    <li>Die Frage wurde schon als beantwortet markiert</li>
                }
            </ul>
        }
    }
    <br />
    <div>
        @Html.Raw(Model.Text)
    </div>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Löschen" class="btn btn-default" /> 
        </div>
    }
</div>
