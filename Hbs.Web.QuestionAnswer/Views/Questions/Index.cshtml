@model IEnumerable<Hbs.Web.QuestionAnswer.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script type="text/javascript" src="~/Scripts/Pages/QuestionIndex.js"></script>
}

<h2>Bisherige Fragen</h2>

<p>
    @Html.ActionLink("Neue Frage erstellen", "Create")
</p>

<div class="form-group filter-box">
    <input type="text" class="form-control" id="filterbox" placeholder="Filtern...">
</div>


@foreach (var item in Model)
{
    <div class="question-container" data-question="@item.Title.ToLowerInvariant()" data-questiontext="@item.Text.ToLowerInvariant()">
        <div class="question-index-headline-container">
            <div class="question-index-headline-text">
                <h3>
                    @Html.ActionLink(item.Title, "Details", new { id = item.Id })
                </h3>
            </div>
            <div class="question-index-headline-icon" style="@(item.HasSolution ? "" : "display:none")">
                <img src="~/Content/img/sign-check.png" />
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="word-wrap">@Html.Raw(item.ShortText)</div>
    </div>
}
